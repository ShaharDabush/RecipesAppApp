<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipesAppApp.Views.UsersListView"
             xmlns:models="clr-namespace:RecipesAppApp.Models"
             xmlns:classes="clr-namespace:RecipesAppApp.Classes"
             Title="UsersListView">
    <RefreshView 
             Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
        <CollectionView  ItemsSource="{Binding UserList}" ItemsLayout="VerticalList" x:Name="theCollectionView" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20" HorizontalOptions="FillAndExpand" ColumnDefinitions="*,2*" RowDefinitions="*,*,*,*" VerticalOptions="Start">
                        <Image Grid.Column="0" Grid.RowSpan="4" Grid.Row="0" WidthRequest="100" HorizontalOptions="Start"
                           Source="{Binding UserImage}"
                            />
                        <Label Grid.Column="1" Grid.Row="0"
                           Text="{Binding UserName}"
                            FontAttributes="Bold"/>
                        <Label Grid.Column="1" Grid.Row="1">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Joined in: "/>
                                    <Span Text="{Binding Email}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Column="1" Grid.Row="2">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Contact information: "/>
                                    <Span Text="{Binding Email}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Column="1" Grid.Row="3">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Has "/>
                                    <Span Text="{Binding RecipeAmout}"/>
                                    <Span Text=" Recipes"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>