<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipesAppApp.Views.CreateIngredientView"
             Title="CreateIngredientView">
    <VerticalStackLayout>
        <Border Stroke="Transparent" Margin="10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30"/>
            </Border.StrokeShape>
            <Image Source="{Binding Recipe.PhotoURL}" HeightRequest="300" Aspect="AspectFill"></Image>
        </Border>
    </VerticalStackLayout>
</ContentPage>