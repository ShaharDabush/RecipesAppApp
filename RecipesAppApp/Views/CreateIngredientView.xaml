<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:viewmodels="clr-namespace:RecipesAppApp.ViewModels"
             HorizontalOptions="Center"
             Size="270,300"
             Color="Wheat"
             VerticalOptions="Center"
             x:Class="RecipesAppApp.Views.CreateIngredientView">
    <VerticalStackLayout>
        <!--<Label x:Name="barcodeResult" Text="{Binding IngedientCode}" />-->
        <cv:CameraView x:Name="cameraView" WidthRequest="390" HeightRequest="300" IsVisible="{Binding IsInCameraMode}" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected_1"/>
    </VerticalStackLayout>
</toolkit:Popup>
